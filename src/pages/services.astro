---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import Card from '../components/Card.astro';
import CTA from '../components/CTA.astro';
import { siteConfig } from '../config/site';

// Fire & Frost Mechanical Services
const services = [
  {
    id: 'heating',
    title: 'Heating',
    description: "Keep your home warm through Saskatchewan's harsh winters. We provide expert furnace repair and maintenance to ensure your heating system runs efficiently when you need it most.",
    features: [
      'Furnace repair and diagnostics',
      'Preventative maintenance',
      'System tune-ups and inspections',
      'Emergency heating service',
    ],
    icon: `<svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.362 5.214A8.252 8.252 0 0112 21 8.25 8.25 0 016.038 7.048 8.287 8.287 0 009 9.6a8.983 8.983 0 013.361-6.867 8.21 8.21 0 003 2.48z" /><path stroke-linecap="round" stroke-linejoin="round" d="M12 18a3.75 3.75 0 00.495-7.467 5.99 5.99 0 00-1.925 3.546 5.974 5.974 0 01-2.133-1A3.75 3.75 0 0012 18z" /></svg>`,
  },
  {
    id: 'cooling',
    title: 'Cooling',
    description: "Stay comfortable during hot Saskatchewan summers. Our AC repair and maintenance services keep your cooling system running at peak performance.",
    features: [
      'AC repair and diagnostics',
      'System maintenance and tune-ups',
      'Air quality solutions',
      'Cooling system inspections',
    ],
    icon: `<svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" /></svg>`,
  },
  {
    id: 'refrigeration',
    title: 'Refrigeration',
    description: "Commercial refrigeration expertise for businesses. We service walk-in coolers and walk-in freezers to keep your products at the right temperature.",
    features: [
      'Walk-in cooler repair and maintenance',
      'Walk-in freezer repair and maintenance',
      'Temperature control diagnostics',
      'Commercial refrigeration service',
    ],
    icon: `<svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M21 7.5l-2.25-1.313M21 7.5v2.25m0-2.25l-2.25 1.313M3 7.5l2.25-1.313M3 7.5l2.25 1.313M3 7.5v2.25m9 3l2.25-1.313M12 12.75l-2.25-1.313M12 12.75V15m0 6.75l2.25-1.313M12 21.75V19.5m0 2.25l-2.25-1.313m0-16.875L12 2.25l2.25 1.313M21 14.25v2.25l-2.25 1.313m-13.5 0L3 16.5v-2.25" /></svg>`,
  },
];

// Our process
const process = [
  {
    step: 1,
    title: 'Contact Us',
    description: 'Call or send us a message. We respond quickly to all inquiries.',
  },
  {
    step: 2,
    title: 'Diagnosis',
    description: "We'll assess your system and identify the problem quickly.",
  },
  {
    step: 3,
    title: 'Expert Service',
    description: 'Professional repair or maintenance completed right.',
  },
  {
    step: 4,
    title: 'Your Comfort',
    description: 'Enjoy reliable heating, cooling, or refrigeration.',
  },
];
---

<Layout
  title="Services"
  description="Heating, cooling, and refrigeration services in Saskatoon and area. Furnace repair, AC maintenance, walk-in cooler and freezer service. Contact for pricing."
>
  <!-- Hero -->
  <Hero
    title="Our Services"
    subtitle="Professional heating, cooling, and refrigeration services for homes and businesses in Saskatoon and area."
    primaryCta={{ text: "Call Now", href: `tel:${siteConfig.contact.phone.replace(/\D/g, '')}` }}
    size="md"
  />

  <!-- Services List -->
  {services.map((service, index) => (
    <Section
      id={service.id}
      background={index % 2 === 0 ? 'white' : 'gray'}
    >
      <div class="grid gap-8 lg:grid-cols-2 lg:items-center">
        <div class={index % 2 === 1 ? 'lg:order-2' : ''}>
          <div class="flex h-16 w-16 items-center justify-center rounded-xl bg-primary-100 text-primary-600">
            <Fragment set:html={service.icon} />
          </div>
          <h2 class="mt-6 text-3xl font-bold text-gray-900">{service.title}</h2>
          <p class="mt-4 text-lg text-gray-600">{service.description}</p>
          <ul class="mt-6 space-y-3">
            {service.features.map((feature) => (
              <li class="flex items-start gap-3">
                <svg class="mt-1 h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-600">{feature}</span>
              </li>
            ))}
          </ul>
          <div class="mt-6">
            <a
              href="/contact"
              class="inline-flex items-center rounded-lg bg-primary-600 px-5 py-2.5 text-sm font-medium text-white shadow-sm transition-colors hover:bg-primary-700"
            >
              Contact for Pricing
            </a>
          </div>
        </div>
        <div class={index % 2 === 1 ? 'lg:order-1' : ''}>
          <div class="aspect-video rounded-xl bg-gradient-to-br from-primary-100 to-primary-200 flex items-center justify-center">
            <div class="text-primary-600">
              <Fragment set:html={service.icon.replace('h-8 w-8', 'h-24 w-24')} />
            </div>
          </div>
        </div>
      </div>
    </Section>
  ))}

  <!-- Service Areas -->
  <Section
    id="areas"
    title="Service Area"
    subtitle="We proudly serve Saskatoon and the surrounding area."
    background="gray"
  >
    <div class="mx-auto max-w-2xl text-center">
      <div class="flex items-center justify-center gap-2 rounded-lg bg-white p-6 shadow-sm">
        <svg class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
        </svg>
        <span class="text-lg font-medium text-gray-900">Saskatoon and Area</span>
      </div>
      <p class="mt-4 text-gray-600">
        Not sure if we service your area? Give us a call at {siteConfig.contact.phone} and we'll let you know!
      </p>
    </div>
  </Section>

  <!-- Our Process -->
  <Section
    title="How We Work"
    subtitle="Simple, straightforward service from start to finish."
  >
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {process.map((item) => (
        <div class="relative text-center">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-primary-600 text-xl font-bold text-white">
            {item.step}
          </div>
          <h3 class="mt-4 text-lg font-semibold text-gray-900">{item.title}</h3>
          <p class="mt-2 text-gray-600">{item.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- Operating Hours -->
  <Section
    title="Operating Hours"
    subtitle="We're here when you need us."
    background="gray"
  >
    <div class="mx-auto max-w-xl">
      <div class="grid gap-6 sm:grid-cols-2">
        <div class="rounded-lg bg-white p-6 shadow-sm text-center">
          <h3 class="text-lg font-semibold text-gray-900">Regular Hours</h3>
          <div class="mt-4">
            <div class="text-3xl font-bold text-primary-600">7:30 AM - 7:30 PM</div>
            <p class="mt-2 text-gray-600">7 days a week</p>
          </div>
        </div>
        <div class="rounded-lg bg-white p-6 shadow-sm text-center">
          <h3 class="text-lg font-semibold text-gray-900">Emergency Service</h3>
          <div class="mt-4">
            <div class="text-3xl font-bold text-secondary-600">24/7</div>
            <p class="mt-2 text-gray-600">On-call service available</p>
          </div>
        </div>
      </div>
      <p class="mt-6 text-center text-sm text-gray-500">
        Contact us for pricing on all services.
      </p>
    </div>
  </Section>

  <!-- FAQ Section -->
  <Section title="Frequently Asked Questions">
    <div class="mx-auto max-w-3xl divide-y divide-gray-200">
      <details class="group py-6">
        <summary class="flex cursor-pointer items-center justify-between text-lg font-medium text-gray-900">
          What services do you offer?
          <svg class="h-5 w-5 text-gray-500 transition-transform group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
          </svg>
        </summary>
        <p class="mt-4 text-gray-600">
          We offer heating (furnace repair and maintenance), cooling (AC repair and maintenance),
          and refrigeration services (walk-in cooler and walk-in freezer repair and maintenance).
          We provide installation, maintenance, and repair services.
        </p>
      </details>
      <details class="group py-6">
        <summary class="flex cursor-pointer items-center justify-between text-lg font-medium text-gray-900">
          Do you offer emergency service?
          <svg class="h-5 w-5 text-gray-500 transition-transform group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
          </svg>
        </summary>
        <p class="mt-4 text-gray-600">
          Yes! We offer 24/7 on-call service for emergencies. Our regular operating hours are
          7:30 AM to 7:30 PM, but we're available around the clock when you need us most.
        </p>
      </details>
      <details class="group py-6">
        <summary class="flex cursor-pointer items-center justify-between text-lg font-medium text-gray-900">
          What areas do you serve?
          <svg class="h-5 w-5 text-gray-500 transition-transform group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
          </svg>
        </summary>
        <p class="mt-4 text-gray-600">
          We serve Saskatoon and the surrounding area. Not sure if we service your location?
          Give us a call and we'll let you know!
        </p>
      </details>
      <details class="group py-6">
        <summary class="flex cursor-pointer items-center justify-between text-lg font-medium text-gray-900">
          How do I get a price estimate?
          <svg class="h-5 w-5 text-gray-500 transition-transform group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
          </svg>
        </summary>
        <p class="mt-4 text-gray-600">
          Contact us to discuss your needs and we'll provide you with pricing information.
          Every job is different, so we prefer to understand your situation before providing
          a quote.
        </p>
      </details>
    </div>
  </Section>

  <!-- CTA -->
  <CTA
    title="Ready to Get Started?"
    description="Contact us today for professional heating, cooling, or refrigeration service."
    primaryButton={{ text: "Call Now", href: `tel:${siteConfig.contact.phone.replace(/\D/g, '')}` }}
    secondaryButton={{ text: "Contact Us", href: "/contact" }}
  />
</Layout>
