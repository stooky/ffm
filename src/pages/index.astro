---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import FeatureGrid from '../components/FeatureGrid.astro';
import Card from '../components/Card.astro';
import Testimonial from '../components/Testimonial.astro';
import CTA from '../components/CTA.astro';
import { siteConfig } from '../config/site';

// Fire & Frost Mechanical Services
const features = [
  {
    title: 'Heating',
    description: 'Furnace repair and maintenance to keep your home warm through Saskatchewan winters. Expert diagnostics and reliable service.',
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.362 5.214A8.252 8.252 0 0112 21 8.25 8.25 0 016.038 7.048 8.287 8.287 0 009 9.6a8.983 8.983 0 013.361-6.867 8.21 8.21 0 003 2.48z" /><path stroke-linecap="round" stroke-linejoin="round" d="M12 18a3.75 3.75 0 00.495-7.467 5.99 5.99 0 00-1.925 3.546 5.974 5.974 0 01-2.133-1A3.75 3.75 0 0012 18z" /></svg>`,
  },
  {
    title: 'Cooling',
    description: 'AC repair and maintenance to keep you comfortable during hot Saskatchewan summers. Professional service you can count on.',
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" /></svg>`,
  },
  {
    title: 'Refrigeration',
    description: 'Walk-in cooler and walk-in freezer repair and maintenance. Commercial refrigeration expertise for your business.',
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M21 7.5l-2.25-1.313M21 7.5v2.25m0-2.25l-2.25 1.313M3 7.5l2.25-1.313M3 7.5l2.25 1.313M3 7.5v2.25m9 3l2.25-1.313M12 12.75l-2.25-1.313M12 12.75V15m0 6.75l2.25-1.313M12 21.75V19.5m0 2.25l-2.25-1.313m0-16.875L12 2.25l2.25 1.313M21 14.25v2.25l-2.25 1.313m-13.5 0L3 16.5v-2.25" /></svg>`,
  },
];

// Customer testimonials
const testimonials = [
  {
    quote: "Clay was very professional when he inspected my furnace and A/C unit. He was able to diagnose the problem very quickly and explained what the issue was in a manner that I could understand. Honest and no upsell pressure. Will definitely use Fire & Frost Mechanical again in the future.",
    author: "Jeremy Dela Cruz",
    role: "Homeowner",
    company: "Saskatoon",
  },
  {
    quote: "Clay helped us when we moved to our new place to get our home and garage heaters serviced. Clay is very professional and easy to work with. I recommend giving him a call!",
    author: "Andrew Owen",
    role: "Homeowner",
    company: "Saskatoon",
  },
  {
    quote: "Didn't have hot water for two days trying to fix it myself, Clay came and in ten minutes fixed the issue. He is the best!",
    author: "Calebhe Jordan",
    role: "Homeowner",
    company: "Saskatoon",
  },
];
---

<Layout title="Home">
  <!-- Hero Section -->
  <Hero
    title="Your Comfort, Our Priority"
    subtitle="Professional heating, cooling, and refrigeration services for Saskatoon and area. Expert installation, maintenance, and repair with 24/7 on-call service."
    primaryCta={{ text: "Call Now", href: `tel:${siteConfig.contact.phone.replace(/\D/g, '')}` }}
    secondaryCta={{ text: "Our Services", href: "/services" }}
  />

  <!-- Contact Banner -->
  <div class="bg-secondary-600 text-white py-3">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row items-center justify-center gap-2 sm:gap-4 text-center">
        <span class="font-semibold">24/7 On-Call Service Available</span>
        <span class="hidden sm:inline">|</span>
        <a href={`tel:${siteConfig.contact.phone.replace(/\D/g, '')}`} class="font-bold hover:underline">
          Call {siteConfig.contact.phone}
        </a>
      </div>
    </div>
  </div>

  <!-- Services Section -->
  <Section
    title="Our Services"
    subtitle="Comprehensive HVAC and refrigeration services for homes and businesses."
    background="gray"
  >
    <FeatureGrid features={features} columns={3} />
  </Section>

  <!-- Why Choose Us Section -->
  <Section
    title="Why Choose Fire & Frost Mechanical?"
    subtitle="Professional service you can trust."
  >
    <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
      <div>
        <p class="text-lg text-gray-600">
          Fire & Frost Mechanical provides professional HVAC and refrigeration services
          to Saskatoon and the surrounding area. We specialize in heating, cooling, and
          commercial refrigeration—bringing expert diagnostics and reliable repairs to
          every job.
        </p>
        <ul class="mt-8 space-y-4">
          <li class="flex items-start gap-3">
            <svg class="mt-1 h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-600"><strong>Expert Installation</strong> – Professional installation and replacement of HVAC systems</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="mt-1 h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-600"><strong>Preventative Maintenance</strong> – Key to optimal performance and longevity</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="mt-1 h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-600"><strong>Quality Repairs</strong> – Solutions to improve your indoor air quality</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="mt-1 h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-600"><strong>24/7 On-Call Service</strong> – Available when you need us most</span>
          </li>
        </ul>
        <div class="mt-8">
          <a
            href="/about"
            class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700"
          >
            Learn more about us
            <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
      </div>
      <div class="relative">
        <!-- Service Highlights Grid -->
        <div class="grid grid-cols-2 gap-4">
          <div class="rounded-xl bg-primary-50 p-6 text-center">
            <div class="text-3xl font-bold text-primary-600">24/7</div>
            <div class="mt-1 text-sm text-gray-600">On-Call Service</div>
          </div>
          <div class="rounded-xl bg-secondary-50 p-6 text-center">
            <div class="text-3xl font-bold text-secondary-600">7:30-7:30</div>
            <div class="mt-1 text-sm text-gray-600">Operating Hours</div>
          </div>
          <div class="rounded-xl bg-secondary-50 p-6 text-center">
            <div class="text-3xl font-bold text-secondary-600">HVAC</div>
            <div class="mt-1 text-sm text-gray-600">& Refrigeration</div>
          </div>
          <div class="rounded-xl bg-primary-50 p-6 text-center">
            <div class="text-3xl font-bold text-primary-600">SK</div>
            <div class="mt-1 text-sm text-gray-600">Saskatoon & Area</div>
          </div>
        </div>
      </div>
    </div>
  </Section>

  <!-- Testimonials Section -->
  <Section
    title="What Our Customers Say"
    subtitle="Hear from homeowners and businesses in Saskatoon."
    background="gray"
  >
    <div class="grid gap-8 md:grid-cols-3">
      {testimonials.map((testimonial) => (
        <Testimonial {...testimonial} />
      ))}
    </div>
  </Section>

  <!-- CTA Section -->
  <CTA
    title="Ready to Get Started?"
    description="Contact us today for professional heating, cooling, or refrigeration service in Saskatoon and area."
    primaryButton={{ text: "Call Now", href: `tel:${siteConfig.contact.phone.replace(/\D/g, '')}` }}
    secondaryButton={{ text: "Contact Us", href: "/contact" }}
  />
</Layout>
